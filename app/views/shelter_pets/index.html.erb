<h1>Pets That Belong to This Shelter</h1>

<% @pets.each do |pet| %>
  <%= image_tag(pet.image, alt: pet.name) %>
  <p><%= pet.name %></p>
  <p><%= pet.sex %></p>
  <p> <%= pet.approx_age %></p>
  <p> <%= pet.adoptable? %></p>
  <p> <%= pet.description %></p>
<% end %>

<%= link_to "Create Pet", "pets/new" %>
